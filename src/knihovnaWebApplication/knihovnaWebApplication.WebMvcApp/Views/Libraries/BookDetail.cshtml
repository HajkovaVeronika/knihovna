@model BookDetailModel;

@{
    Layout = "_Layout";
}

<style>

     .bookDetailContainer {
         display: flex;
         flex-direction: column;
         padding: 150px;
         padding-top: 50px;
         gap: 50px;
     }

    .bookInfoContainer {
        display: flex;
        flex-direction: row;
        gap: 100px;
        flex: 1;
        padding: 25px;
        align-items: flex-start; /* zabrání natažení položek na stejnou výšku */
    }

    .coverImgBook {
        flex: 0 0 auto;      /* zabrání obrázku v růstu/strečování jako flex child */
        width: 320px;        /* pevná šířka, jak jste chtěl */
        height: auto;        /* výška se přizpůsobí poměru stran */
        max-height: 80vh;    /* zabrání příliš vysokým obrázkům přetékat viewport */
        object-fit: contain; /* zobrazí celý obrázek bez oříznutí, zachová poměr stran */
        border-radius: 25px;
        display: block;
    }

    .bookInfoRight {
        display: flex;
        flex-direction: column;
        flex: 2;
        font-size: 20px;
        height: 500px;
    }

    .bookTitle {
        font-size: 2em;
        font-weight: bold;
    }

    .bookInfoRight p {
        margin-bottom: 10px;
    }

    .bookBoldSpan {
        font-weight: bold;
    }

    .bookAuthor {
        font-size: 2rem;
    }

    .bookDescription {
        flex: 1;
        padding: 25px;
    }

    .line {
        background-color: #99B4C8;
        width: 100%;
        height: 4px;
    }

    .descriptionText {
        padding: 25px;
        font-size: 1.2em;
        padding-top: 10px
    }

    .editBtn {
        margin-top: auto;
        width: 150px;
        margin-bottom: 10px;
    }

</style>

<main>
    <p class="topLink"> <a class="branchesLink" asp-controller="Libraries" asp-action="BranchDetail" asp-route-libraryId="@Model.BranchId">@Model.BranchName</a> > @Model.Book.Title</p>
    <div class="bookDetailContainer">
            <div class="bookInfoContainer">
                <img src="@Model.Book.CoverImg" alt="book image" class="bookImage coverImgBook">
                <div class="bookInfoRight">
                    <p class="bookTitle">@Model.Book.Title</p>
                    <p class="bookAuthor">@Model.Book.Author</p>
                    <p> <span style="color: #FFBB00; font-size: larger">★</span> @Model.Book.Rating</p>
                    <p> <span class="bookBoldSpan">Ganre: </span> @Model.Book.Genre</p>
                    <p> <span class="bookBoldSpan">Pages: </span>@Model.Book.Pages</p>
                    <p> <span class="bookBoldSpan">Publish date: </span>@Model.Book.PublishDate.ToString("d", System.Globalization.CultureInfo.CurrentCulture)</p>
                    <p> <span class="bookBoldSpan">Available: </span>
                    @if(@Model.Book.Available)
                    {
                        <span style="color: green">yes</span>
                    } else
                    {
                        <span style="color: red">no</span>
                    }
                </p>
                    <p> <span class="bookBoldSpan">Times lent: </span>@Model.Book.TimesLent</p>
                    <a class="myA editBtn" asp-controller="Libraries" asp-action="EditBook" asp-route-bookId="@Model.Book.BookId"> <button class="myBtn">Edit</button></a>
                </div>
        </div>
        <div class="line"></div>
        <div class="bookDescription">
            <p class="bookTitle">Description</p>
            <p class="descriptionText">@Model.Book.Description</p>
        </div>
    </div>
</main>




